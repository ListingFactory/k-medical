rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 마사지샵 컬렉션 - 모든 사용자가 읽기 가능
    match /shops/{shopId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 리뷰 컬렉션 - 모든 사용자가 읽기 가능, 로그인한 사용자만 쓰기 가능
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 즐겨찾기 컬렉션 - 로그인한 사용자만 접근 가능
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 사용자 컬렉션 - 로그인한 사용자만 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // SNS 포스트 컬렉션 - 모든 사용자가 읽기 가능, 로그인한 사용자만 쓰기 가능
    match /sns_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.shopId;
    }
    
    // 구인구직 컬렉션 - 모든 사용자가 읽기 가능, 로그인한 사용자만 쓰기 가능
    match /job_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 마켓 컬렉션 - 모든 사용자가 읽기 가능, 로그인한 사용자만 쓰기 가능
    match /market_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 역경매 컬렉션 - 모든 사용자가 읽기 가능, 로그인한 사용자만 쓰기 가능
    match /auctions/{auctionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
} 