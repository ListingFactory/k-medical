rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 프로필 이미지 - 로그인한 사용자만 업로드 가능
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 마사지샵 이미지 - 모든 사용자가 읽기 가능, 로그인한 사용자만 업로드 가능
    match /shop_images/{shopId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 리뷰 이미지 - 모든 사용자가 읽기 가능, 로그인한 사용자만 업로드 가능
    match /review_images/{reviewId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // SNS 포스트 이미지 - 모든 사용자가 읽기 가능, 로그인한 사용자만 업로드 가능
    match /sns_posts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 